{%- set tplroot = tpldir.split('/')[0] %}
{% import_yaml tplroot+"/defaults.yaml" as defaults %}

{% set consul-bootstrap = salt['pillar.get']('consul-bootstrap', default=defaults.consul, merge=True) %}

{# Add any overrides based on CPU architecture. #}
{% set consul-bootstrap = salt['grains.filter_by']({
        'armv6l': {
            "arch": 'arm'
        },
        'armv7l': {
            "arch": 'arm'
        },
        'x86_64': {
            "arch": 'amd64'
        }
  }
  ,grain="cpuarch"
  ,merge=consul)
%}

{% do consul-bootstrap.config.update({'retry_join': consul-bootstrap.config.retry_join or []}) %}
